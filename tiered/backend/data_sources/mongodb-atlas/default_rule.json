{
    "roles": [
        {
            "name": "admin",
            "apply_when": {
                "%%user.custom_data.isTeamAdmin": true
            },
            "document_filters": {
                "write": {
                    "team": {
                        "$in": "%%user.custom_data.teams"
                    }
                },
                "read": {
                    "team": {
                        "$in": "%%user.custom_data.teams"
                    }
                }
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true
        },
        {
            "name": "user",
            "apply_when": {},
            "document_filters": {
                "write": {
                    "owner_id": "%%user.id"
                },
                "read": {
                    "team": {
                        "$in": "%%user.custom_data.teams"
                    }
                }
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true
        }
    ]
}
